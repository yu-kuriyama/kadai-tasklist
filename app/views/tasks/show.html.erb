<h1>id: <%= @task.id %>のタスク詳細ページ</h1>
<div class="container">
    <div class="row">

<table class="table table-bordered col-3 ">
        <tr>
            <th>id</th>
            <td><%= @task.id %></td>
        </tr>
        <tr>
             <th>ステータス</th>
             <td><%= @task.status  %></td>
        </tr>
        <tr>
             <th>タスク</th>
             <td><%= @task.content %></td>
        </tr>
</table>
    </div>
</div>

<%= link_to '続けて登録', new_task_path , class:"btn btn-light" %>
<%= link_to 'このメッセージを編集する', edit_task_path(@task), class: 'btn btn-light' %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>